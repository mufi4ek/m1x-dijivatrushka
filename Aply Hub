-- === ФУНКЦИЯ СОЗДАНИЯ КНОПОК С АНИМАЦИЕЙ ===

local function createButton(name, yPos)

    local btn = Instance.new("TextButton", frame)

    btn.Size = UDim2.new(1, -20, 0, 30)

    btn.Position = UDim2.new(0, 10, 0, yPos)

    btn.Text = name

    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

    btn.TextColor3 = Color3.new(1, 1, 1)

    btn.Font = Enum.Font.Gotham

    btn.TextSize = 16

    btn.AutoButtonColor = false

    btn.Parent = frame

    local corner = Instance.new("UICorner", btn)

    corner.CornerRadius = UDim.new(0, 8)

    btn.MouseButton1Down:Connect(function()

        btn:TweenSize(UDim2.new(1, -24, 0, 28), "Out", "Quad", 0.05, true)

    end)

    btn.MouseButton1Up:Connect(function()

        btn:TweenSize(UDim2.new(1, -20, 0, 30), "Out", "Quad", 0.1, true)

    end)

    return btn

end

-- === КНОПКИ ===

local stealBtn = createButton("Auto steal: OFF", 40)

local kickBtn = createButton("Auto kick", 80)

local espBtn = createButton("Esp player", 120)

local antiHitBtn = createButton("Anti hit", 160)

-- === Auto steal: ON/OFF ===

local stealOn = false

local stealLoop = nil

stealBtn.MouseButton1Click:Connect(function()

    stealOn = not stealOn

    stealBtn.Text = "Auto steal: " .. (stealOn and "ON" or "OFF")

    if stealOn then

        stealLoop = game:GetService("RunService").Heartbeat:Connect(function()

            local char = player.Character

            if not char then return end

            local tool = char:FindFirstChild("Brainrot")

            local root = char:FindFirstChild("HumanoidRootPart")

            local target = workspace:FindFirstChild("CollectionArea")

            if tool and root and target then

                root.CFrame = target.CFrame + Vector3.new(0, 5, 0)

            end

        end)

    else

        if stealLoop then stealLoop:Disconnect() stealLoop = nil end

    end

end)

-- === Esp player ===

local espOn = false

local espLoop = nil

espBtn.MouseButton1Click:Connect(function()

    espOn = not espOn

    espBtn.Text = "Esp player"

    if espOn then

        espLoop = game:GetService("RunService").Heartbeat:Connect(function()

            for _, plr in pairs(game.Players:GetPlayers()) do

                if plr ~= player and plr.Character then

                    local char = plr.Character

                    if not char:FindFirstChild("Highlight") then

                        local hl = Instance.new("Highlight", char)

                        hl.Name = "Highlight"

                        hl.FillColor = Color3.fromRGB(255, 255, 255)

                        hl.OutlineColor = Color3.fromRGB(255, 255, 255)

                        hl.FillTransparency = 0.8

                        hl.OutlineTransparency = 0.1

                    end

                end

            end

        end)

    else

        if espLoop then espLoop:Disconnect() espLoop = nil end

        for _, plr in pairs(game.Players:GetPlayers()) do

            if plr ~= player and plr.Character then

                local hl = plr.Character:FindFirstChild("Highlight")

                if hl then hl:Destroy() end

            end

        end

    end

end)

-- === Anti hit ===

antiHitBtn.MouseButton1Click:Connect(function()

    print("Anti hit toggled")

end)

-- === ОТКРЫТИЕ МЕНЮ ===

icon.MouseButton1Click:Connect(function()

    frame.Visible = not frame.Visible

end)

local RunService = game:GetService("RunService")

local glowColors = {

    Color3.fromRGB(0, 0, 0),     -- black

    Color3.fromRGB(255, 255, 255), -- white

    Color3.fromRGB(128, 128, 128)  -- gray

}

local glowIndex = 1

local glowTimer = 0

RunService.Heartbeat:Connect(function(dt)

    glowTimer += dt

    if glowTimer >= 1 then

        glowTimer = 0

        glowIndex = glowIndex % #glowColors + 1

        local color = glowColors[glowIndex]

        iconStroke.Color = color

        frameStroke.Color = color

    end

end)

